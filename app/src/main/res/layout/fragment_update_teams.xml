<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".UpdateTeamsFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/teams_card_animation"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="8dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/vs_teams" />

    <TextView
        android:id="@+id/teams_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teams_card_animation"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/update_teams_fragment_title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/home_name_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teams_card_title"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/white_stroke_style"
            android:fontFamily="@font/alfa_slab_one"
            android:text="@string/update_teams_fragment_home_team"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/home_team_name_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:fontFamily="@font/alfa_slab_one"
            android:hint="@string/update_teams_fragment_home_hint"
            android:inputType="textCapWords"
            android:textSize="22sp"
            tools:ignore="Autofill" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/away_team_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_name_edit_layout"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/white_stroke_style"
            android:fontFamily="@font/alfa_slab_one"
            android:text="@string/update_teams_fragment_away_team"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/away_team_name_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:fontFamily="@font/alfa_slab_one"
            android:hint="@string/update_teams_fragment_away_hint"
            android:inputType="textCapWords"
            android:textSize="22sp"
            tools:ignore="Autofill" />

    </LinearLayout>

    <Button
        android:id="@+id/team_card_update_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/away_team_edit_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/gradient_button_background"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="@string/update_teams_fragment_update_button"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/skip_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/team_card_update_button"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/gradient_button_background"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="@string/update_teams_fragment_skip_button"
        android:textColor="@color/white"
        android:textSize="22sp" />

</RelativeLayout>


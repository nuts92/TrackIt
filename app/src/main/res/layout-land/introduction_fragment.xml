<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/introduction_image"
        android:layout_width="270dp"
        android:layout_height="250dp"
        tools:src="@drawable/designed_intro_one_zoom"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="How To Number One"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/alfa_slab_one"/>

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="One Click on this button to view the card game progress and save this progress to your games list history."
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:maxLines="4"
            android:fontFamily="@font/alfa_slab_one" />

    </LinearLayout>

</LinearLayout>



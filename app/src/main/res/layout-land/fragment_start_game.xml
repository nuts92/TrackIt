<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_gradient"
    android:orientation="vertical"
    tools:context=".StartGameFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/result_lottie_animation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/start_game" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        android:background="@drawable/button_style_one"
        android:fontFamily="@font/alfa_slab_one"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:paddingTop="8dp"
        android:paddingEnd="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="8dp"
        android:text="@string/start_a_new_game_button"
        android:textColor="@color/white"
        android:textSize="24sp" />

</LinearLayout>
